{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Services Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "tagline": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "highlights": {
      "type": "component",
      "component": "shared.text-item",
      "repeatable": true
    },
    "packages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tour.tour",
      "mappedBy": "service"
    },
    "bgImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
