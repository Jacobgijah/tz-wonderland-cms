{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "Tours Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "shortDescription": {
      "type": "text"
    },
    "durationLabel": {
      "type": "string"
    },
    "rating": {
      "type": "decimal"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "quickFacts": {
      "type": "component",
      "component": "tour.quick-facts",
      "repeatable": false
    },
    "highlights": {
      "type": "component",
      "component": "shared.text-item",
      "repeatable": true
    },
    "exclusions": {
      "type": "component",
      "component": "shared.text-item",
      "repeatable": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "sortOrder": {
      "type": "integer"
    },
    "inclusions": {
      "type": "component",
      "component": "shared.text-item",
      "repeatable": true
    },
    "itinerary": {
      "type": "component",
      "component": "tour.itinerary-day",
      "repeatable": true
    },
    "service": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::service.service",
      "inversedBy": "packages"
    }
  }
}
